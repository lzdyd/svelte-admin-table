{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w & nodemon mockServer/server.js",
    "start": "sirv public",
    "lint": "eslint src/",
    "lint:write": "eslint --debug src/ --fix"
