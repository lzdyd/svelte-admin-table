    "@rollup/plugin-image": "^2.0.5",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "autoprefixer": "^9.8.0",
    "cors": "^2.8.5",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "express": "^4.17.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
